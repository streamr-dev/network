{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Browser â€“ Streamr",
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "types": ["node", "jest"],
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false
    }
}

{
  "name": "streamr-client",
  "version": "1.0.0",
  "description": "JavaScript client library for Streamr",
  "repository": {
    "type": "git",
    "url": "git://github.com/streamr-dev/streamr-client.git"
  },
  "main": "dist/streamr-client.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "prepack": "npm run build",
    "dev": "webpack --progress --colors --watch",
    "eslint": "eslint src/** test/**",
    "test": "jest --detectOpenHandles",
    "test-unit": "jest --detectOpenHandles --forceExit test/unit",
    "test-integration": "jest --detectOpenHandles --forceExit --runInBand test/integration"
  },
  "browser": {
    "http": "./src/shim/http-https.js",
    "https": "./src/shim/http-https.js",
    "ws": "./src/shim/ws.js",
    "node-fetch": "./src/shim/node-fetch.js"
  },
  "engines": {
    "node": ">= 8"
  },
  "author": "Streamr",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-2017": "0.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-streamr": "^1.1.7",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.4",
    "jest": "^23.6.0",
    "lodash": "^4.17.10",
    "sinon": "^6.3.5",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-runtime": "^6.26.0",
    "debug": "^3.1.0",
    "eventemitter3": "^3.0.1",
    "js-sha256": "^0.9.0",
    "murmurhash-native": "^3.3.0",
    "node-fetch": "^2.1.2",
    "querystring": "^0.2.0",
    "randomstring": "^1.1.5",
    "streamr-client-protocol": "^2.0.0-beta.6",
    "web3": "^1.0.0-beta.48",
    "web3-fake-provider": "^0.1.0",
    "webpack-node-externals": "^1.7.2",
    "websocket": "^1.0.28",
    "ws": "^6.1.2"
  }
}

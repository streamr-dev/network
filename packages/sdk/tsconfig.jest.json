{
  "extends": "../../tsconfig.jest.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "package.json",
    "src",
    "src/**/*.json",
    "bin",
    "test",
    "test/**/*.json",
    "scripts"
  ],
  "exclude": [
    "src/generated",
    "test/exports"
  ],
  "references": [
    { "path": "./tsconfig.generated.json" }
  ]
}

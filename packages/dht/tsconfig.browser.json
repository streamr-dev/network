{
  "extends": "../../tsconfig.browser.json",
  "compilerOptions": {
    "outDir": "dist/browser",
    "baseUrl": ".",

    /* Mapping */
    "paths": {
      "@/*": [
        "src/browser/*"
      ]
    },

    /* @todo Make verbatimModuleSyntax (true) work. */
    "verbatimModuleSyntax": false,

    /* @todo Make useUnknownInCatchVariables (true) work. */
    "useUnknownInCatchVariables": false,

    /* @todo Make erasableSyntaxOnly (true) work. */
    "erasableSyntaxOnly": false,

    /* @todo Make noUnusedLocals (true) work. */
    "noUnusedLocals": false,

    /* @todo Make noUnusedParameters (true) work. */
    "noUnusedParameters": false
  },
  "include": [
    "src",
    "package.json"
  ],
  "exclude": [
    "src/nodejs"
  ],
  "references": [
    { "path": "../utils" },
    { "path": "../proto-rpc" },
    { "path": "../cdn-location" },
    { "path": "../geoip-location" },
    { "path": "../autocertifier-client" },
    { "path": "./tsconfig.browser-generated.json" }
  ]
}

{
    "extends": "@streamr/dev-config/ts/tsconfig.node.json",
    "compilerOptions": {
        "declarationDir": "dist/types",
        "outDir": "dist",
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
            "DOM"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictBindCallApply": true
    },
    "include": [
        "src/**/*",
        "vendor/**/*",
        "contracts/**/*"
    ],
    "exclude": ["src/dataunion/*"]
}

{
    "extends": "@streamr/dev-config/ts/tsconfig.browser.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDirs": ["src", "test"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictBindCallApply": true
    },
    "include": [
        "src/**/*",
        "vendor/**/*",
        "contracts/**/*",
        "test/**/*"
    ],
    "exclude": ["node_modules", "dist", "src/dataunion/*"]
}

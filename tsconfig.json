{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "lib": [
        "ES5",
        "ES2015",
        "ES2016",
        "ES2017",
        "ES2018",
        "ES2019",
        "ES2020",
        "ESNext",
        "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "contracts/*"],
  "exclude": ["node_modules", "dist"]
}
